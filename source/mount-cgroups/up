if -t { busybox test -e /proc/cgroups }
if {
  if -nt { busybox mountpoint -q /sys/fs/cgroup }
  busybox mount -o mode=0755,nodev,noexec,nosuid,size=1M -t tmpfs cgroup /sys/fs/cgroup
}
pipeline { busybox sed -n "1d;s/^\\([[:alpha:]]\\{1,\\}\\)\\t.*\\t1$/\\1/p" /proc/cgroups }
forstdin -p controller
import -u controller
if -nt { busybox mountpoint -q /sys/fs/cgroup/${controller} }
if { busybox mkdir -p /sys/fs/cgroup/${controller} }
busybox mount -o ${controller} -t cgroup cgroup /sys/fs/cgroup/${controller}
